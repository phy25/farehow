---
layout: base.njk
---

<article class="agency-page">
  <h1>{{ title }}</h1>
  
  <div class="agency-info-container">
    <section class="agency-info payment-methods">
      <h2>Payment Methods</h2>
      <div class="info-grid">
        <div class="info-item">
          <h3>Open Loop Support</h3>
          <p class="status {{ 'status-yes' if support_openloop else 'status-no' }}">{{ "✓ Yes" if support_openloop else "✗ No" }}</p>
        </div>
        
        <div class="info-item">
          <h3>QR Code Support</h3>
          <p class="status {{ 'status-yes' if support_qrcode else 'status-no' }}">{{ "✓ Yes" if support_qrcode else "✗ No" }}</p>
        </div>
        
        <div class="info-item">
          <h3>Cash Support</h3>
          <p class="status {{ 'status-yes' if support_cash else 'status-no' }}">{{ "✓ Yes" if support_cash else "✗ No" }}</p>
        </div>
        
        <div class="info-item">
          <h3>Open Loop Passback</h3>
          <p class="status {{ 'status-yes' if support_openloop_passback else 'status-no' }}">{{ "✓ Yes" if support_openloop_passback else "✗ No" }}</p>
        </div>
      </div>
    </section>
    
    <section class="agency-info transfer-policy">
      <h2>Transfer Policy</h2>
      <div class="transfer-info">
        <div class="info-item">
          <h3>Transfer Time Limit</h3>
          {% if transfer_limit_duration_min %}
          <p class="status">{{ transfer_limit_duration_min }} minutes</p>
          {% else %}
          <p class="status">No free transfers</p>
          {% endif %}
        </div>
      </div>
    </section>
  </div>
  
  <section class="agency-content">
    {{ content | safe }}
  </section>
</article>
